#new:Script $Script_TogglePosTracker_On
{
	Set *MapVar[0] .True
	Return
	End
}

#new:Script $Script_TogglePosTracker_Off
{
	Set *MapVar[0] .False
	Return
	End
}

#new:Script $Script_TrackDeathTrigger
{
    Loop
		If *MapVar[0] == .True
			Call    GetPlayerPos ( *Var0 *Var1 *Var2 )
			If *Var1 < ~PosYd:respawnTrigger
				ExecWait $Script_Respawn
			EndIf
		EndIf
        Wait    1
    EndLoop
    Return
    End
}

